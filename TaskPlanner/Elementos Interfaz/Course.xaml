<UserControl x:Class="TaskPlanner.Course"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="50" Width="370">
    <Grid>
        <Rectangle Fill="#F9F9F9" RadiusX="5" RadiusY="5" Stroke="#55000000" Margin="0,1,0,1" Name="TaskRectangle" />
        <Label Margin="7.6,2.8,33.4,19.6" Name="LBL_TITULO" VerticalContentAlignment="Center" FontSize="13" FontWeight="Bold">&lt;Nombre del curso&gt;</Label>
        <Label Margin="9.2,20.8,33.4,1.2" Name="LBL_FECHAS" VerticalContentAlignment="Center">&lt;Fechas inicio y fin&gt;</Label>
        <Button Margin="0,1" Name="BTN_CURSO" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Opacity="0.3" Padding="1" IsTabStop="True" Click="BTN_CURSO_Click" ToolTip="Mostrar detalles del Curso"></Button>
        <Button Margin="0,5.661,5,0" Name="BTN_ELIMINAR" Padding="0" FontSize="9" IsTabStop="True" BorderThickness="1" Background="#FFFF9999" Click="BTN_ELIMINAR_Click" HorizontalAlignment="Right" Width="18" Height="18" VerticalAlignment="Top" ToolTip="Eliminar curso">X</Button>
    </Grid>
</UserControl>
