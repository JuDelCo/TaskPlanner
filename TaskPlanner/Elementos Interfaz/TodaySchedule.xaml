<UserControl x:Class="TaskPlanner.TodaySchedule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="48" Width="370">
    <Grid>
        <Rectangle Fill="#F9F9F9" RadiusX="5" RadiusY="5" Stroke="#55000000" Margin="0,1,0,1" Name="TaskRectangle" />
        <Label Margin="12,0,19,0" Name="LBL_ASIGNATURA" VerticalContentAlignment="Center" FontSize="13" FontWeight="Bold" Height="28" VerticalAlignment="Top">&lt;Asignatura&gt;</Label>
        <Label Margin="12,20,0,1" Name="LBL_HORARIO" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="102">&lt;Horario&gt;</Label>
        <Label Margin="115,20,8,1" Name="LBL_LUGAR" VerticalContentAlignment="Center" HorizontalContentAlignment="Right">&lt;Lugar&gt;</Label>
    </Grid>
</UserControl>